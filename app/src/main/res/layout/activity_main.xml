<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"

    tools:context="com.example.android.credtcardhelper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="6">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:text="Enter Card Balance ($)"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:layout_weight="1"
        android:layout_gravity="top"
            android:textSize="18sp" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
         android:background="@drawable/drawable1"
            android:layout_gravity="top"
            android:layout_weight="0.6">
        </EditText>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enter Yearly Interest Rate(%)"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:textSize="18sp" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable"
                android:layout_gravity="top"
                android:layout_weight="0.6">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enter Minimum Payment($)"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:textSize="18sp" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="top"
                android:background="@drawable/drawable"
                android:layout_weight="0.6">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Final Card Balance($)"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:textSize="18sp" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable"
                android:layout_gravity="top"
                android:layout_weight="0.6">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Months Remaining"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:textSize="18sp" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable"
                android:layout_gravity="top"
                android:layout_weight="0.6">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Interest Paid Will Be($)"
                android:textAlignment="gravity"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:textSize="18sp" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable"
                android:layout_gravity="top"
                android:layout_weight="0.6">
            </EditText>

        </LinearLayout>
        </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:text="COMPUTE"
        android:textAlignment="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="CLEAR"
        android:textColor="#000000"
        android:layout_weight="2"
        android:gravity="center"
        android:textAlignment="center"/>
</LinearLayout>


























